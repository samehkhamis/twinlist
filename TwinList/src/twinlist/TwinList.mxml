<?xml version="1.0" encoding="utf-8"?>
<twinlist:TwinListClass
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/mx"
	xmlns:twinlist="twinlist.*"
	minWidth="1024" minHeight="768" pageTitle="TwinList"
	>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:Group width="1024" height="768" horizontalCenter="0" verticalCenter="0">
		<s:layout>
			<s:HorizontalLayout/>
		</s:layout>
		<mx:HDividedBox width="100%" height="100%">
			<s:Group width="65%" height="100%">
				<twinlist:ListViewer/>
			</s:Group>
			<s:Group width="35%" height="100%">
				<mx:VDividedBox width="100%" height="100%">
					<s:Group width="100%" height="100%">
						<twinlist:TabDock/>					
					</s:Group>
					<s:Group width="100%" height="100%">
						<twinlist:DetailPanel/>					
					</s:Group>
				</mx:VDividedBox>
			</s:Group>
		</mx:HDividedBox>		
	</s:Group>
</twinlist:TwinListClass>
