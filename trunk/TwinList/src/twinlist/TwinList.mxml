<?xml version="1.0" encoding="utf-8"?>
<twinlist:TwinListClass
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/mx"
	xmlns:twinlist="twinlist.*"
	minWidth="1024" minHeight="768" pageTitle="TwinList"
>
	<fx:Style source="TwinList.css"/>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<twinlist:layout>
		<s:HorizontalLayout/>
	</twinlist:layout>
	<mx:HDividedBox width="100%" height="100%">
		<s:Group id="leftBox" width="75%" height="100%">
			<mx:VDividedBox width="100%" height="100%">
				<s:Group width="100%" height="90%">
					<twinlist:ListViewerFlare top="0" left="0" right="0" bottom="0"/>
				</s:Group>
				<s:Group width="100%" height="10%">
					<twinlist:ActionListDock top="0" left="0" right="0" bottom="0"/>
				</s:Group>
			</mx:VDividedBox>
		</s:Group>
		<s:Group id="rightBox" width="25%" height="100%">
			<mx:VDividedBox width="100%" height="100%">
				<s:Group width="100%" height="60%">
					<twinlist:TabDock width="253" height="569" top="2" left="0"/>
				</s:Group>
				<s:Group width="100%" height="196">
					<twinlist:DetailPanel left="0" top="0" bottom="0" right="0"/>
				</s:Group>
			</mx:VDividedBox>
		</s:Group>
	</mx:HDividedBox>
</twinlist:TwinListClass>
