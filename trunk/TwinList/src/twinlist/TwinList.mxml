<?xml version="1.0" encoding="utf-8"?>
<twinlist:TwinListClass
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/mx"
	xmlns:twinlist="twinlist.*"
	minWidth="1024" minHeight="768" pageTitle="TwinList"
	>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<twinlist:layout>
		<s:HorizontalLayout/>
	</twinlist:layout>
	<mx:HDividedBox width="100%" height="100%">
		<s:Group id="leftBox" width="70%" height="100%">
			<mx:VDividedBox width="100%" height="100%">
				<s:Group width="100%" height="60%">
					<twinlist:ListViewerFlare/>
				</s:Group>
				<s:Group width="100%" height="40%">
					<twinlist:ActionList/>
				</s:Group>
			</mx:VDividedBox>
		</s:Group>
		<s:Group id="rightBox" width="30%" height="100%">
			<mx:VDividedBox width="100%" height="100%">
				<s:Group width="100%" height="75%">
					<twinlist:TabDock/>
				</s:Group>
				<s:Group width="100%" height="25%">
					<twinlist:DetailPanel/>
				</s:Group>
			</mx:VDividedBox>
		</s:Group>
	</mx:HDividedBox>
</twinlist:TwinListClass>
