<?xml version="1.0" encoding="utf-8"?>
<twinlist:ListViewerFlareClass
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/mx"
	xmlns:flare="flare.flex.vis.*"
	xmlns:twinlist="twinlist.*"
	width="100%" height="100%">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<twinlist:layout>
		<s:VerticalLayout paddingLeft="10" paddingRight="10" paddingTop="10" paddingBottom="10"/>
	</twinlist:layout>
	<s:HGroup>
		<s:Label text="List Viewer" fontSize="24" />
		<s:Button id="resetBtn" label="Reset View" width="100" click="ResetButtonClick(event)"/>
		<s:Button id="leftAnimBtn" label="&lt;" width="50" click="LeftAnimClick(event)" />
		<s:Button id="rightAnimBtn" label="&gt;" width="50" click="RightAnimClick(event)" />
	</s:HGroup>
	<s:Scroller id="scroller" width="100%" height="100%" horizontalScrollPolicy="auto">
		<s:Group width="100%" height="100%" clipAndEnableScrolling="true">
			<flare:FlareCanvas id="canvas" visualization="{this.vis}"/>
		</s:Group>
	</s:Scroller>
</twinlist:ListViewerFlareClass>
