<?xml version="1.0" encoding="utf-8"?>
<twinlist:ControlsPanelClass
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/mx"
	xmlns:twinlist="twinlist.*"
	width="100%" height="100%">
	<twinlist:layout>
		<s:VerticalLayout paddingLeft="10" paddingRight="10" paddingTop="10" paddingBottom="10"/>
	</twinlist:layout>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:HGroup>
		<s:Label text="Group by:" paddingTop="5" width="80"/>
		<s:DropDownList id="groupByList" width="100%"
						dataProvider="{model.ListItemAttributes}" change="OnChange(event)"
						selectedIndex="0"
						/>
	</s:HGroup>
	<s:HGroup>
		<s:Label text="Sort by:" paddingTop="5" width="80"/>
		<s:DropDownList id="sortByList" width="100%"
						dataProvider="{model.ListItemAttributes}" change="OnChange(event)"
						selectedIndex="0"
						/>
	</s:HGroup>
</twinlist:ControlsPanelClass>
