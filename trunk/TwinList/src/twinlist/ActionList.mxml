<?xml version="1.0" encoding="utf-8"?>
<twinlist:ActionListClass
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/mx"
	xmlns:twinlist="twinlist.*"
	width="100%" height="100%">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:Group width="100%" height="100%">
		<s:layout>
			<s:HorizontalLayout/>
		</s:layout>
		<mx:DataGrid x="0" y="0" height="100%" width="100%" borderVisible="false">
			<mx:columns>
				<mx:DataGridColumn headerText="Name" dataField="name"/>
				<mx:DataGridColumn headerText="Dosage" dataField="dosage"/>
				<mx:DataGridColumn headerText="Form" dataField="form"/>
				<mx:DataGridColumn headerText="Freq" dataField="freq"/>
			</mx:columns>
		</mx:DataGrid>
	</s:Group>
</twinlist:ActionListClass>
