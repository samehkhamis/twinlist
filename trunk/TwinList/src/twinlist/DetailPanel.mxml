<?xml version="1.0" encoding="utf-8"?>
<twinlist:DetailPanelClass
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/mx"
	xmlns:twinlist="twinlist.*"
	width="100%" height="100%">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:Group width="100%" height="100%">
		<s:layout>
			<s:VerticalLayout paddingLeft="10" paddingRight="10" paddingTop="10" paddingBottom="10"/>
		</s:layout>
		<s:Label text="Item Detail: {model.SelectedItem.Name}" fontSize="14"/>
		<mx:DataGrid borderVisible="false" width="100%" height="100%" selectable="false"
					 dataProvider="{model.SelectedItem.Attributes}">
			<mx:columns>
				<mx:DataGridColumn headerText="Attribute" dataField="Name" resizable="true" sortable="true"/>
				<mx:DataGridColumn headerText="Value" dataField="Value" resizable="true" sortable="true"/>
			</mx:columns>
		</mx:DataGrid>
	</s:Group>
</twinlist:DetailPanelClass>
