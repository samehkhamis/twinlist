		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 xmlns:twinlist="twinlist.*"
		 width="100%" height="100%">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:layout>
		<s:HorizontalLayout paddingLeft="10" paddingRight="10" paddingTop="10" paddingBottom="10"/>
	</s:layout>
	<mx:TabNavigator id="tabDock" width="100%" height="100%" borderVisible="false">
		<s:NavigatorContent id="controlsPanel" label="Controls" width="100%" height="100%">
			<twinlist:ControlsPanel/>
		</s:NavigatorContent>
		<s:NavigatorContent id="filterPanel" label="Filters" width="100%" height="100%">
			<twinlist:FilterPanel/>
		</s:NavigatorContent>
		<s:NavigatorContent id="optionsPanel" label="Options" width="100%" height="100%">
			<twinlist:OptionsPanel/>
		</s:NavigatorContent>
	</mx:TabNavigator>
</s:Group>
