<?xml version="1.0" encoding="utf-8"?>
<twinlist:ListViewerClass
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/mx"
	xmlns:twinlist="twinlist.*"
	width="100%" height="100%">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:Group width="100%" height="100%">
		<s:layout>
			<s:VerticalLayout paddingLeft="10" paddingRight="10" paddingTop="10" paddingBottom="10"/>
		</s:layout>
		<s:Label text="List Viewer" fontSize="32" />
		<mx:AdvancedDataGrid x="0" y="0" width="100%" height="100%" designViewDataType="flat" selectionMode="singleCell"
			editable="false" borderVisible="false" id="dataGrid" verticalGridLines="false"
			dataProvider="{model.ListViewerData}" itemClick="OnItemClick(event);">
			<mx:columns>
				<mx:AdvancedDataGridColumn headerText="L1 - Unique" dataField="L1Unique" resizable="true"/>
				<mx:AdvancedDataGridColumn headerText="L1 - Similar" dataField="L1Similar"/>
				<mx:AdvancedDataGridColumn headerText="Identical" dataField="Identical"/>
				<mx:AdvancedDataGridColumn headerText="L2 - Similar" dataField="L2Similar"/>
				<mx:AdvancedDataGridColumn headerText="L2 - Unique" dataField="L2Unique"/>
			</mx:columns>
		</mx:AdvancedDataGrid>	
	</s:Group>
</twinlist:ListViewerClass>
